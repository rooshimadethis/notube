{
  "manifest_version": 3,
  "name": "NoTube",
  "version": "1.0",
  "description": "A Chrome extension to block YouTube",
  "permissions": ["webRequest", "webRequestBlocking", "storage", "unlimitedStorage", "tabs", "scripting"],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
